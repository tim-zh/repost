GET         /$page<\d+>           controllers.Application.index(page: Int)
POST        /$page<\d+>           controllers.Application.index(page: Int)
GET         /                     controllers.Application.index(page: Int = 0)
POST        /                     controllers.Application.index(page: Int = 0)

POST        /search/:page         controllers.Application.search(page: Int)
POST        /search               controllers.Application.search(page: Int = 0)

GET         /tag/:id/:page        controllers.Application.tag(id: Long, page: Int)
GET         /tag/:id              controllers.Application.tag(id: Long, page: Int = 0)

GET         /entry/:id            controllers.Application.entry(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
